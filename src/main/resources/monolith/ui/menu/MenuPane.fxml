<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="menuPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monolith.ui.MenuPaneController">
  <top>
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="79.0" prefWidth="1322.0" text="MONOLITH ALPHA" BorderPane.alignment="CENTER"/>
  </top>
  <center>
    <GridPane prefHeight="700.0" prefWidth="349.0" BorderPane.alignment="CENTER">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints maxHeight="250.0" minHeight="0.0" prefHeight="60.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="250.0" minHeight="0.0" prefHeight="60.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="250.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="250.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="610.0" minHeight="10.0" prefHeight="155.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <children>
        <Button fx:id="continueButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onContinue" prefHeight="70.0" prefWidth="460.0"
                text="Continue" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
        <Button fx:id="newGameButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onNewGame" prefHeight="70.0" prefWidth="460.0"
                text="New Game" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
        <Button fx:id="optionsButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onOptions" prefHeight="70.0" prefWidth="460.0"
                text="Options" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
        <Button fx:id="exitButton" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onExit" prefHeight="70.0" prefWidth="460.0" text="Exit"
                GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER"/>
        <ImageView fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="4"
                   GridPane.valignment="CENTER">
        </ImageView>
      </children>
    </GridPane>
  </center>
</BorderPane>
